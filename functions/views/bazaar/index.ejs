<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bazaar Management - Sitara777 Admin Panel</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-crown text-danger"></i> Sitara777</h3>
                <p class="text-muted">Admin Panel</p>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        Dashboard
                    </a>
                </li>
                <li class="active">
                    <a href="/bazaar">
                        <i class="fas fa-store"></i>
                        Bazaar Management
                    </a>
                </li>
                <li>
                    <a href="/results">
                        <i class="fas fa-chart-line"></i>
                        Game Results
                    </a>
                </li>
                <li>
                    <a href="/users">
                        <i class="fas fa-users"></i>
                        Users Management
                    </a>
                </li>
                <li>
                    <a href="/withdrawals">
                        <i class="fas fa-money-bill-wave"></i>
                        Withdrawal Requests
                    </a>
                </li>
                <li>
                    <a href="/payments">
                        <i class="fas fa-credit-card"></i>
                        Payment Management
                    </a>
                </li>
                <li>
                    <a href="/notifications">
                        <i class="fas fa-bell"></i>
                        Push Notifications
                    </a>
                </li>
                <li>
                    <a href="/settings">
                        <i class="fas fa-cog"></i>
                        Settings
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-danger">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                                <%= user ? user.username : 'Admin' %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/auth/change-password">
                                    <i class="fas fa-key"></i> Change Password
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2><i class="fas fa-store text-danger"></i> Bazaar Management</h2>
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#addBazaarModal">
                                <i class="fas fa-plus"></i> Add New Bazaar
                            </button>
                        </div>

                        <!-- Statistics Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.total %></h4>
                                                <p class="mb-0">Total Bazaars</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-store fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.active %></h4>
                                                <p class="mb-0">Active Bazaars</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-check-circle fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.inactive %></h4>
                                                <p class="mb-0">Inactive Bazaars</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-pause-circle fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.withResults %></h4>
                                                <p class="mb-0">With Results</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-chart-bar fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Bazaar Table -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-list"></i> Bazaar List</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover" id="bazaarTable">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Name</th>
                                                <th>Status</th>
                                                <th>Open Time</th>
                                                <th>Close Time</th>
                                                <th>Result</th>
                                                <th>Last Updated</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% bazaars.forEach(function(bazaar) { %>
                                            <tr data-bazaar-id="<%= bazaar.id %>">
                                                <td>
                                                    <strong><%= bazaar.name %></strong>
                                                    <% if (bazaar.isPopular) { %>
                                                        <span class="badge bg-warning">Popular</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="badge <%= bazaar.isOpen ? 'bg-success' : 'bg-secondary' %>">
                                                        <%= bazaar.isOpen ? 'Open' : 'Closed' %>
                                                    </span>
                                                </td>
                                                <td><%= bazaar.openTime || 'N/A' %></td>
                                                <td><%= bazaar.closeTime || 'N/A' %></td>
                                                <td>
                                                    <% if (bazaar.result && bazaar.result !== '') { %>
                                                        <span class="badge bg-info"><%= bazaar.result %></span>
                                                    <% } else { %>
                                                        <span class="text-muted">No Result</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <%= bazaar.updatedAt ? (bazaar.updatedAt.toDate ? new Date(bazaar.updatedAt.toDate()).toLocaleString() : new Date(bazaar.updatedAt).toLocaleString()) : 'N/A' %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <button class="btn btn-sm btn-outline-primary" onclick="editBazaar('<%= bazaar.id %>')">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-success" onclick="toggleBazaarStatus('<%= bazaar.id %>')">
                                                            <i class="fas fa-toggle-on"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-info" onclick="updateResult('<%= bazaar.id %>')">
                                                            <i class="fas fa-chart-line"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteBazaar('<%= bazaar.id %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Bazaar Modal -->
    <div class="modal fade" id="addBazaarModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-plus"></i> Add New Bazaar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="addBazaarForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Bazaar Name</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Open Time</label>
                                    <input type="time" class="form-control" name="openTime">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Close Time</label>
                                    <input type="time" class="form-control" name="closeTime">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="isPopular" id="isPopular">
                                <label class="form-check-label" for="isPopular">
                                    Mark as Popular
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Add Bazaar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Bazaar Modal -->
    <div class="modal fade" id="editBazaarModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Bazaar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="editBazaarForm">
                    <div class="modal-body">
                        <input type="hidden" name="bazaarId" id="editBazaarId">
                        <div class="mb-3">
                            <label class="form-label">Bazaar Name</label>
                            <input type="text" class="form-control" name="name" id="editBazaarName" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Open Time</label>
                                    <input type="time" class="form-control" name="openTime" id="editOpenTime">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Close Time</label>
                                    <input type="time" class="form-control" name="closeTime" id="editCloseTime">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" id="editDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="isPopular" id="editIsPopular">
                                <label class="form-check-label" for="editIsPopular">
                                    Mark as Popular
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Bazaar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Update Result Modal -->
    <div class="modal fade" id="updateResultModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-chart-line"></i> Update Result</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="updateResultForm">
                    <div class="modal-body">
                        <input type="hidden" name="bazaarId" id="resultBazaarId">
                        <div class="mb-3">
                            <label class="form-label">Bazaar Name</label>
                            <input type="text" class="form-control" id="resultBazaarName" readonly>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Open Number</label>
                                    <input type="text" class="form-control" name="open" id="resultOpen" maxlength="3" placeholder="123">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Close Number</label>
                                    <input type="text" class="form-control" name="close" id="resultClose" maxlength="3" placeholder="456">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" name="date" id="resultDate" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Update Result</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/app.js"></script>
    
    <script>
        // Initialize date for result modal
        document.getElementById('resultDate').value = new Date().toISOString().split('T')[0];

        // Add Bazaar Form
        document.getElementById('addBazaarForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            data.isPopular = formData.get('isPopular') === 'on';

            fetch('/bazaar/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    location.reload();
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error adding bazaar');
            });
        });

        // Edit Bazaar
        function editBazaar(bazaarId) {
            // Fetch bazaar data and populate modal
            fetch(`/bazaar/${bazaarId}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const bazaar = data.bazaar;
                    document.getElementById('editBazaarId').value = bazaar.id;
                    document.getElementById('editBazaarName').value = bazaar.name;
                    document.getElementById('editOpenTime').value = bazaar.openTime || '';
                    document.getElementById('editCloseTime').value = bazaar.closeTime || '';
                    document.getElementById('editDescription').value = bazaar.description || '';
                    document.getElementById('editIsPopular').checked = bazaar.isPopular || false;
                    
                    new bootstrap.Modal(document.getElementById('editBazaarModal')).show();
                }
            });
        }

        // Edit Bazaar Form
        document.getElementById('editBazaarForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            data.isPopular = formData.get('isPopular') === 'on';

            fetch('/bazaar/update', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    location.reload();
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error updating bazaar');
            });
        });

        // Toggle Bazaar Status
        function toggleBazaarStatus(bazaarId) {
            if (confirm('Are you sure you want to toggle this bazaar status?')) {
                fetch('/bazaar/toggle-status', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ bazaarId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('success', data.message);
                        location.reload();
                    } else {
                        showAlert('danger', data.message);
                    }
                })
                .catch(error => {
                    showAlert('danger', 'Error toggling status');
                });
            }
        }

        // Update Result
        function updateResult(bazaarId) {
            // Fetch bazaar data
            fetch(`/bazaar/${bazaarId}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const bazaar = data.bazaar;
                    document.getElementById('resultBazaarId').value = bazaar.id;
                    document.getElementById('resultBazaarName').value = bazaar.name;
                    
                    new bootstrap.Modal(document.getElementById('updateResultModal')).show();
                }
            });
        }

        // Update Result Form
        document.getElementById('updateResultForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            fetch('/bazaar/update-result', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    location.reload();
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error updating result');
            });
        });

        // Delete Bazaar
        function deleteBazaar(bazaarId) {
            if (confirm('Are you sure you want to delete this bazaar? This action cannot be undone.')) {
                fetch('/bazaar/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ bazaarId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('success', data.message);
                        location.reload();
                    } else {
                        showAlert('danger', data.message);
                    }
                })
                .catch(error => {
                    showAlert('danger', 'Error deleting bazaar');
                });
            }
        }

        // Show Alert Function
        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('.container-fluid').insertBefore(alertDiv, document.querySelector('.row'));
            
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }
    </script>
</body>
</html> 