<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Bazaar - Sitara777 Admin Panel</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-crown text-danger"></i> Sitara777</h3>
                <p class="text-muted">Admin Panel</p>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        Dashboard
                    </a>
                </li>
                <li class="active">
                    <a href="/bazaar">
                        <i class="fas fa-store"></i>
                        Bazaar Management
                    </a>
                </li>
                <li>
                    <a href="/results">
                        <i class="fas fa-chart-line"></i>
                        Game Results
                    </a>
                </li>
                <li>
                    <a href="/users">
                        <i class="fas fa-users"></i>
                        Users Management
                    </a>
                </li>
                <li>
                    <a href="/withdrawals">
                        <i class="fas fa-money-bill-wave"></i>
                        Withdrawal Requests
                    </a>
                </li>
                <li>
                    <a href="/payments">
                        <i class="fas fa-credit-card"></i>
                        Payment Management
                    </a>
                </li>
                <li>
                    <a href="/notifications">
                        <i class="fas fa-bell"></i>
                        Push Notifications
                    </a>
                </li>
                <li>
                    <a href="/settings">
                        <i class="fas fa-cog"></i>
                        Settings
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-danger">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                                <%= user ? user.username : 'Admin' %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/auth/change-password">
                                    <i class="fas fa-key"></i> Change Password
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="h3 mb-0">
                                <i class="fas fa-edit text-danger"></i> Edit Bazaar
                            </h1>
                            <a href="/bazaar" class="btn btn-outline-danger">
                                <i class="fas fa-arrow-left"></i> Back to Bazaars
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white">
                                <h6 class="m-0 font-weight-bold text-danger">
                                    <i class="fas fa-store"></i> Bazaar Information
                                </h6>
                            </div>
                            <div class="card-body">
                                <form action="/bazaar/edit/<%= bazaar.id %>" method="POST">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="name" class="form-label">Bazaar Name *</label>
                                            <input type="text" class="form-control" id="name" name="name" value="<%= bazaar.name %>" required>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="openTime" class="form-label">Open Time *</label>
                                            <input type="time" class="form-control" id="openTime" name="openTime" value="<%= bazaar.openTime %>" required>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="closeTime" class="form-label">Close Time *</label>
                                            <input type="time" class="form-control" id="closeTime" name="closeTime" value="<%= bazaar.closeTime %>" required>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Current Status</label>
                                            <div class="form-control-plaintext">
                                                <span class="badge bg-<%= bazaar.isOpen ? 'success' : 'secondary' %>">
                                                    <%= bazaar.isOpen ? 'Open' : 'Closed' %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-save"></i> Update Bazaar
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white">
                                <h6 class="m-0 font-weight-bold text-danger">
                                    <i class="fas fa-info-circle"></i> Bazaar Details
                                </h6>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <strong>ID:</strong> <%= bazaar.id %>
                                    </li>
                                    <li class="mb-2">
                                        <strong>Name:</strong> <%= bazaar.name %>
                                    </li>
                                    <li class="mb-2">
                                        <strong>Open Time:</strong> <%= bazaar.openTime %>
                                    </li>
                                    <li class="mb-2">
                                        <strong>Close Time:</strong> <%= bazaar.closeTime %>
                                    </li>
                                    <li class="mb-2">
                                        <strong>Status:</strong> 
                                        <span class="badge bg-<%= bazaar.isOpen ? 'success' : 'secondary' %>">
                                            <%= bazaar.isOpen ? 'Open' : 'Closed' %>
                                        </span>
                                    </li>
                                    <li class="mb-2">
                                        <strong>Result:</strong> <%= bazaar.result || '*' %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>
</body>
</html> 