  "validationRules": {
    "user": {
      "name": {
        "required": true,
        "minLength": 2,
        "maxLength": 50
      },
      "phone": {
        "required": true,
        "pattern": "^[0-9]{10}$"
      },
      "email": {
        "required": false,
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
      }
    },
    "withdrawal": {
      "amount": {
        "required": true,
        "min": 100,
        "max": 50000
      },
      "bankDetails": {
        "accountNumber": {
          "required": true,
          "minLength": 9,
          "maxLength": 18
        },
        "ifscCode": {
          "required": true,
          "pattern": "^[A-Z]{4}0[A-Z0-9]{6}$"
        }
      }
    },
    "gameResult": {
