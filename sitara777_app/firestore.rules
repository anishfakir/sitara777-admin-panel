rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Withdrawals collection - secure access control
    match /withdrawals/{withdrawalId} {
      // Users can create withdrawal requests for themselves
      allow create: if request.auth != null 
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'pending'
        && request.resource.data.requestedAt == request.time;
      
      // Users can read their own withdrawal requests
      allow read: if request.auth != null 
        && (request.auth.uid == resource.data.userId || isAdmin());
      
      // Only admins can update withdrawal status
      allow update: if request.auth != null 
        && isAdmin()
        && request.resource.data.userId == resource.data.userId
        && request.resource.data.amount == resource.data.amount
        && request.resource.data.requestedAt == resource.data.requestedAt;
      
      // Only admins can delete withdrawal requests
      allow delete: if request.auth != null && isAdmin();
      
      // List withdrawals - users see only their own, admins see all
      allow list: if request.auth != null 
        && (request.query.where[0].field == 'userId' 
            && request.query.where[0].value == request.auth.uid 
            || isAdmin());
    }
    
    // Admin users collection - only admins can access
    match /admin_users/{userId} {
      allow read, write: if request.auth != null && isAdmin();
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null 
        && exists(/databases/$(database)/documents/admin_users/$(request.auth.uid));
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
