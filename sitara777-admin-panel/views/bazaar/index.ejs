<%- include('../layout') %>

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-store me-2"></i>Bazaar Management</h4>
            <a href="/bazaar/add" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Bazaar
            </a>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Total Bazaars</h6>
                        <h3 class="mb-0"><%= stats.totalBazaars %></h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-store fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Open Bazaars</h6>
                        <h3 class="mb-0"><%= stats.openBazaars %></h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-door-open fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Closed Bazaars</h6>
                        <h3 class="mb-0"><%= stats.closedBazaars %></h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-door-closed fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bazaars Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">All Bazaars</h5>
    </div>
    <div class="card-body">
        <% if (bazaars && bazaars.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Open Time</th>
                            <th>Close Time</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bazaars.forEach(bazaar => { %>
                            <tr>
                                <td>
                                    <strong><%= bazaar.name %></strong>
                                </td>
                                <td><%= bazaar.openTime %></td>
                                <td><%= bazaar.closeTime %></td>
                                <td>
                                    <% if (bazaar.isOpen) { %>
                                        <span class="badge bg-success">OPEN</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">CLOSED</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary toggle-status" 
                                                data-id="<%= bazaar.id %>" 
                                                data-status="<%= bazaar.isOpen %>">
                                            <% if (bazaar.isOpen) { %>
                                                <i class="fas fa-door-closed"></i> Close
                                            <% } else { %>
                                                <i class="fas fa-door-open"></i> Open
                                            <% } %>
                                        </button>
                                        <a href="/bazaar/edit/<%= bazaar.id %>" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger delete-bazaar" data-id="<%= bazaar.id %>">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-4">
                <i class="fas fa-store fa-3x text-muted mb-3"></i>
                <p class="text-muted">No bazaars found</p>
                <a href="/bazaar/add" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add First Bazaar
                </a>
            </div>
        <% } %>
    </div>
</div>

<script>
$(document).ready(function() {
    // Toggle bazaar status
    $('.toggle-status').click(function() {
        const id = $(this).data('id');
        const currentStatus = $(this).data('status');
        
        $.post(`/bazaar/toggle/${id}`, function(response) {
            if (response.success) {
                location.reload();
            } else {
                alert('Error: ' + response.message);
            }
        });
    });

    // Delete bazaar
    $('.delete-bazaar').click(function() {
        if (confirm('Are you sure you want to delete this bazaar?')) {
            const id = $(this).data('id');
            
            $.post(`/bazaar/delete/${id}`, function(response) {
                location.reload();
            });
        }
    });
});
</script>
