<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Results Management - Sitara777 Admin Panel</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-crown text-danger"></i> Sitara777</h3>
                <p class="text-muted">Admin Panel</p>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="/bazaar">
                        <i class="fas fa-store"></i>
                        Bazaar Management
                    </a>
                </li>
                <li class="active">
                    <a href="/results">
                        <i class="fas fa-chart-line"></i>
                        Game Results
                    </a>
                </li>
                <li>
                    <a href="/users">
                        <i class="fas fa-users"></i>
                        Users Management
                    </a>
                </li>
                <li>
                    <a href="/withdrawals">
                        <i class="fas fa-money-bill-wave"></i>
                        Withdrawal Requests
                    </a>
                </li>
                <li>
                    <a href="/payments">
                        <i class="fas fa-credit-card"></i>
                        Payment Management
                    </a>
                </li>
                <li>
                    <a href="/notifications">
                        <i class="fas fa-bell"></i>
                        Push Notifications
                    </a>
                </li>
                <li>
                    <a href="/settings">
                        <i class="fas fa-cog"></i>
                        Settings
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-danger">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                                <%= user ? user.username : 'Admin' %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/auth/change-password">
                                    <i class="fas fa-key"></i> Change Password
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2><i class="fas fa-chart-line text-danger"></i> Game Results Management</h2>
                            <div>
                                <button class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#bulkImportModal">
                                    <i class="fas fa-upload"></i> Bulk Import
                                </button>
                                <button class="btn btn-outline-success me-2" onclick="exportResults()">
                                    <i class="fas fa-download"></i> Export
                                </button>
                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#addResultModal">
                                    <i class="fas fa-plus"></i> Add Result
                                </button>
                            </div>
                        </div>

                        <!-- Statistics Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.total %></h4>
                                                <p class="mb-0">Total Results</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-chart-line fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.today %></h4>
                                                <p class="mb-0">Today's Results</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-calendar-day fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.thisWeek %></h4>
                                                <p class="mb-0">This Week</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-calendar-week fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.thisMonth %></h4>
                                                <p class="mb-0">This Month</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-calendar-alt fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Results Table -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-list"></i> Game Results</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover" id="resultsTable">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Bazaar</th>
                                                <th>Date</th>
                                                <th>Open</th>
                                                <th>Close</th>
                                                <th>Result</th>
                                                <th>Created By</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% results.forEach(function(result) { %>
                                            <tr data-result-id="<%= result.id %>">
                                                <td>
                                                    <strong><%= result.bazaarName %></strong>
                                                </td>
                                                <td><%= result.date %></td>
                                                <td>
                                                    <span class="badge bg-primary"><%= result.open %></span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success"><%= result.close %></span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info"><%= result.open %>-<%= result.close %></span>
                                                </td>
                                                <td><%= result.createdBy || 'Admin' %></td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <button class="btn btn-sm btn-outline-primary" onclick="editResult('<%= result.id %>')">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteResult('<%= result.id %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Result Modal -->
    <div class="modal fade" id="addResultModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-plus"></i> Add New Result</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="addResultForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Bazaar</label>
                            <select class="form-control" name="bazaarName" required>
                                <option value="">Select Bazaar</option>
                                <% bazaars.forEach(function(bazaar) { %>
                                <option value="<%= bazaar.name %>"><%= bazaar.name %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" name="date" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Open Number</label>
                                    <input type="text" class="form-control" name="open" maxlength="3" placeholder="123">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Close Number</label>
                                    <input type="text" class="form-control" name="close" maxlength="3" placeholder="456">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Add Result</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Result Modal -->
    <div class="modal fade" id="editResultModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Result</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="editResultForm">
                    <div class="modal-body">
                        <input type="hidden" name="resultId" id="editResultId">
                        <div class="mb-3">
                            <label class="form-label">Bazaar</label>
                            <input type="text" class="form-control" name="bazaarName" id="editBazaarName" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" name="date" id="editDate" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Open Number</label>
                                    <input type="text" class="form-control" name="open" id="editOpen" maxlength="3">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Close Number</label>
                                    <input type="text" class="form-control" name="close" id="editClose" maxlength="3">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Result</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bulk Import Modal -->
    <div class="modal fade" id="bulkImportModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-upload"></i> Bulk Import Results</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="bulkImportForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">CSV Data (Format: Bazaar,Date,Open,Close)</label>
                            <textarea class="form-control" name="csvData" rows="10" placeholder="Kalyan,2024-01-15,123,456&#10;Milan Day,2024-01-15,789,012"></textarea>
                        </div>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Format:</strong> Each line should contain: Bazaar Name, Date (YYYY-MM-DD), Open Number, Close Number
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Import Results</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/app.js"></script>
    
    <script>
        // Initialize date for add result modal
        document.getElementById('addResultForm').querySelector('input[name="date"]').value = new Date().toISOString().split('T')[0];

        // Add Result Form
        document.getElementById('addResultForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            fetch('/results/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    location.reload();
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error adding result');
            });
        });

        // Edit Result
        function editResult(resultId) {
            // Fetch result data and populate modal
            fetch(`/results/${resultId}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const result = data.result;
                    document.getElementById('editResultId').value = result.id;
                    document.getElementById('editBazaarName').value = result.bazaarName;
                    document.getElementById('editDate').value = result.date;
                    document.getElementById('editOpen').value = result.open;
                    document.getElementById('editClose').value = result.close;
                    
                    new bootstrap.Modal(document.getElementById('editResultModal')).show();
                }
            });
        }

        // Edit Result Form
        document.getElementById('editResultForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            fetch('/results/update', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    location.reload();
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error updating result');
            });
        });

        // Delete Result
        function deleteResult(resultId) {
            if (confirm('Are you sure you want to delete this result? This action cannot be undone.')) {
                fetch('/results/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ resultId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('success', data.message);
                        location.reload();
                    } else {
                        showAlert('danger', data.message);
                    }
                })
                .catch(error => {
                    showAlert('danger', 'Error deleting result');
                });
            }
        }

        // Bulk Import Form
        document.getElementById('bulkImportForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const csvData = formData.get('csvData');
            
            if (!csvData.trim()) {
                showAlert('danger', 'Please enter CSV data');
                return;
            }

            // Parse CSV data
            const lines = csvData.trim().split('\n');
            const results = [];
            
            for (const line of lines) {
                const [bazaarName, date, open, close] = line.split(',').map(item => item.trim());
                if (bazaarName && date) {
                    results.push({
                        bazaarName,
                        date,
                        open: open || '**',
                        close: close || '**'
                    });
                }
            }

            if (results.length === 0) {
                showAlert('danger', 'No valid data found in CSV');
                return;
            }

            fetch('/results/bulk-import', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ results })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    location.reload();
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error importing results');
            });
        });

        // Export Results
        function exportResults() {
            fetch('/results/export')
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Create CSV content
                    let csvContent = 'Bazaar,Date,Open,Close\n';
                    data.results.forEach(result => {
                        csvContent += `${result.bazaarName},${result.date},${result.open},${result.close}\n`;
                    });

                    // Download CSV file
                    const blob = new Blob([csvContent], { type: 'text/csv' });
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = `game-results-${new Date().toISOString().split('T')[0]}.csv`;
                    a.click();
                    window.URL.revokeObjectURL(url);
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error exporting results');
            });
        }

        // Show Alert Function
        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('.container-fluid').insertBefore(alertDiv, document.querySelector('.row'));
            
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }
    </script>
</body>
</html> 