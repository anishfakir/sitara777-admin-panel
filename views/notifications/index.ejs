<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Push Notifications - Sitara777 Admin Panel</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-crown text-danger"></i> Sitara777</h3>
                <p class="text-muted">Admin Panel</p>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="/bazaar">
                        <i class="fas fa-store"></i>
                        Bazaar Management
                    </a>
                </li>
                <li>
                    <a href="/results">
                        <i class="fas fa-chart-line"></i>
                        Game Results
                    </a>
                </li>
                <li>
                    <a href="/users">
                        <i class="fas fa-users"></i>
                        Users Management
                    </a>
                </li>
                <li>
                    <a href="/withdrawals">
                        <i class="fas fa-money-bill-wave"></i>
                        Withdrawal Requests
                    </a>
                </li>
                <li>
                    <a href="/payments">
                        <i class="fas fa-credit-card"></i>
                        Payment Management
                    </a>
                </li>
                <li class="active">
                    <a href="/notifications">
                        <i class="fas fa-bell"></i>
                        Push Notifications
                    </a>
                </li>
                <li>
                    <a href="/settings">
                        <i class="fas fa-cog"></i>
                        Settings
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-danger">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                                <%= user ? user.username : 'Admin' %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/auth/change-password">
                                    <i class="fas fa-key"></i> Change Password
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2><i class="fas fa-bell text-danger"></i> Push Notifications</h2>
                            <div>
                                <button class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#scheduleNotificationModal">
                                    <i class="fas fa-clock"></i> Schedule
                                </button>
                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#sendNotificationModal">
                                    <i class="fas fa-paper-plane"></i> Send Now
                                </button>
                            </div>
                        </div>

                        <!-- Statistics Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.total %></h4>
                                                <p class="mb-0">Total Sent</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-bell fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.delivered %></h4>
                                                <p class="mb-0">Delivered</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-check-circle fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.scheduled %></h4>
                                                <p class="mb-0">Scheduled</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-clock fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="mb-0"><%= stats.failed %></h4>
                                                <p class="mb-0">Failed</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Notifications Table -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-list"></i> Recent Notifications</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover" id="notificationsTable">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Title</th>
                                                <th>Message</th>
                                                <th>Target</th>
                                                <th>Status</th>
                                                <th>Sent At</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% notifications.forEach(function(notification) { %>
                                            <tr data-notification-id="<%= notification.id %>">
                                                <td>
                                                    <strong><%= notification.title %></strong>
                                                </td>
                                                <td>
                                                    <span class="text-truncate d-inline-block" style="max-width: 200px;" title="<%= notification.message %>">
                                                        <%= notification.message %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info"><%= notification.target || 'All Users' %></span>
                                                </td>
                                                <td>
                                                    <span class="badge <%= notification.status === 'sent' ? 'bg-success' : (notification.status === 'scheduled' ? 'bg-warning' : 'bg-danger') %>">
                                                        <%= notification.status.charAt(0).toUpperCase() + notification.status.slice(1) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <%= notification.sentAt ? (notification.sentAt.toDate ? new Date(notification.sentAt.toDate()).toLocaleString() : new Date(notification.sentAt).toLocaleString()) : 'Scheduled' %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <% if (notification.status === 'scheduled') { %>
                                                        <button class="btn btn-sm btn-outline-success" onclick="resendNotification('<%= notification.id %>')">
                                                            <i class="fas fa-paper-plane"></i> Send Now
                                                        </button>
                                                        <% } %>
                                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteNotification('<%= notification.id %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Send Notification Modal -->
    <div class="modal fade" id="sendNotificationModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-paper-plane"></i> Send Push Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="sendNotificationForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Notification Title</label>
                            <input type="text" class="form-control" name="title" required placeholder="Enter notification title">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" name="message" rows="3" required placeholder="Enter notification message"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Target Users</label>
                            <select class="form-control" name="target">
                                <option value="all">All Users</option>
                                <option value="active">Active Users Only</option>
                                <option value="specific">Specific User (Enter UID below)</option>
                            </select>
                        </div>
                        <div class="mb-3" id="specificUserDiv" style="display: none;">
                            <label class="form-label">User UID</label>
                            <input type="text" class="form-control" name="userId" placeholder="Enter user UID">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Image URL (Optional)</label>
                            <input type="url" class="form-control" name="imageUrl" placeholder="https://example.com/image.jpg">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Send Notification</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Schedule Notification Modal -->
    <div class="modal fade" id="scheduleNotificationModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-clock"></i> Schedule Push Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="scheduleNotificationForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Notification Title</label>
                            <input type="text" class="form-control" name="title" required placeholder="Enter notification title">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" name="message" rows="3" required placeholder="Enter notification message"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Schedule Date & Time</label>
                            <input type="datetime-local" class="form-control" name="scheduledAt" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Target Users</label>
                            <select class="form-control" name="target">
                                <option value="all">All Users</option>
                                <option value="active">Active Users Only</option>
                                <option value="specific">Specific User (Enter UID below)</option>
                            </select>
                        </div>
                        <div class="mb-3" id="scheduleSpecificUserDiv" style="display: none;">
                            <label class="form-label">User UID</label>
                            <input type="text" class="form-control" name="userId" placeholder="Enter user UID">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Schedule Notification</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/app.js"></script>
    
    <script>
        // Show/hide specific user input based on target selection
        document.querySelector('select[name="target"]').addEventListener('change', function() {
            const specificUserDiv = document.getElementById('specificUserDiv');
            specificUserDiv.style.display = this.value === 'specific' ? 'block' : 'none';
        });

        document.querySelector('#scheduleNotificationModal select[name="target"]').addEventListener('change', function() {
            const specificUserDiv = document.getElementById('scheduleSpecificUserDiv');
            specificUserDiv.style.display = this.value === 'specific' ? 'block' : 'none';
        });

        // Send Notification Form
        document.getElementById('sendNotificationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            fetch('/notifications/send', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    location.reload();
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error sending notification');
            });
        });

        // Schedule Notification Form
        document.getElementById('scheduleNotificationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            fetch('/notifications/schedule', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message);
                    location.reload();
                } else {
                    showAlert('danger', data.message);
                }
            })
            .catch(error => {
                showAlert('danger', 'Error scheduling notification');
            });
        });

        // Resend Notification
        function resendNotification(notificationId) {
            if (confirm('Are you sure you want to send this notification now?')) {
                fetch('/notifications/resend', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ notificationId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('success', data.message);
                        location.reload();
                    } else {
                        showAlert('danger', data.message);
                    }
                })
                .catch(error => {
                    showAlert('danger', 'Error resending notification');
                });
            }
        }

        // Delete Notification
        function deleteNotification(notificationId) {
            if (confirm('Are you sure you want to delete this notification?')) {
                fetch('/notifications/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ notificationId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('success', data.message);
                        location.reload();
                    } else {
                        showAlert('danger', data.message);
                    }
                })
                .catch(error => {
                    showAlert('danger', 'Error deleting notification');
                });
            }
        }

        // Show Alert Function
        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('.container-fluid').insertBefore(alertDiv, document.querySelector('.row'));
            
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }
    </script>
</body>
</html> 